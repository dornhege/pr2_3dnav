<launch>
  <node pkg="move_base" type="move_base" name="move_base">
    <remap from="odom" to="base_odometry/odom" />
    <remap from="cmd_vel" to="navigation/cmd_vel" />

    <!-- Use the dwa local planner for the PR2 -->
    <param name="base_local_planner" value="dwa_local_planner/DWAPlannerROS" />
 
    <!-- Load common configuration files -->
    <rosparam file="$(find pr2_3dnav)/configs/move_base_params.yaml" command="load" />
    <rosparam file="$(find pr2_3dnav)/configs/costmap_common_params.yaml" command="load" ns="global_costmap" />
    <rosparam file="$(find pr2_3dnav)/configs/costmap_common_params.yaml" command="load" ns="local_costmap" />
    <rosparam file="$(find pr2_3dnav)/configs/dwa_local_planner.yaml" command="load" ns="DWAPlannerROS" />
    <rosparam file="$(find pr2_3dnav)/configs/recovery_behaviors.yaml" command="load" />

    <!-- Load global navigation specific parameters -->
    <rosparam file="$(find pr2_navigation_global)/config/local_costmap_params.yaml" command="load" />
    <rosparam file="$(find pr2_navigation_global)/config/global_costmap_params.yaml" command="load" />
  </node>
</launch>
